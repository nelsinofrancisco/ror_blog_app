<div class="d-flex justify-content-center">
  <div class="d-flex flex-column users-list">
    <h2 class="mb-2">Forgot your password?</h2>

    <%= form_with url: password_path(resource_name), scope: resource_name, method: :post, class: 'd-flex flex-column' do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-1">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'default-input-devise margin-b-05' %>
      </div>

      <div class="mb-1">
        <%= f.submit "Send me reset password instructions", class: "submit-post-btn mr-1 mw-300" %>
      </div>
      <div>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
