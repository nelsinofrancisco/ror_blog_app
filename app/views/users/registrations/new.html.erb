<div class="d-flex justify-content-center">
  <div class="d-flex flex-column users-list">
    <h1 class="mb-1">Welcome to Oracle's Blog!</h1>
    <h2 class="mb-2" >We are happy to register a new Oracle!</h2>

    <%= form_with url: registration_path(resource_name), scope: resource, class: 'd-flex flex-column' do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <%= f.hidden_field :posts_counter, autofocus: true, value: "0" %>
      <%= f.hidden_field :role, autofocus: true, value: 'user' %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'default-input margin-b-05'  %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'default-input margin-b-05'  %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'default-input margin-b-05'  %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'default-input mb-1' %>
      </div>

      <div>
        <%= f.submit "Sign up", class: "submit-post-btn mr-1" %>
        <%= render "devise/shared/links" %>
      </div>
      

    <% end %>

    
  </div>
</div>