<div class="d-flex justify-content-center">
  <div class="d-flex flex-column users-list">

    <h1 class="mb-1">Welcome to Oracle's Blog!</h1>
    <h2 class="mb-2">Log in</h2>

    <%= form_with url: session_path(resource_name), scope: resource, class: 'd-flex flex-column' do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'default-input-devise margin-b-05' %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'default-input-devise margin-b-05' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-1">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="margin-b-05">
        <%= f.submit "Log in", class: "submit-post-btn mr-1" %>
        <%= link_to new_registration_path(resource_name) do%>
          <button type="button" class="submit-post-btn mr-1">Sign up</button>
        <% end %>
      </div>
       <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
    <% end %>

  </div>
</div>